{
  "name": "QMapEditor",
  "version": "4.1.1",
  "main": "app/js/main/index.js",
  "author": "Quxios",
  "description": "Map Editor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Quxios/QMapEditor.git"
  },
  "scripts": {
    "start": "electron ./dist/ --dev",
    "compile": "rollup -c & electron-builder build --x64 -p never",
    "build": "rollup -c"
  },
  "dependencies": {
    "electron-reload": "^1.5.0",
    "electron-updater": "^4.3.5",
    "marked": "^0.3.19",
    "mobx": "^3.6.2",
    "mobx-react": "^4.4.3",
    "pixi.js": "^5.3.3",
    "react": "^15.7.0",
    "react-dom": "^15.7.0",
    "react-sortable-hoc": "^0.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-syntax-decorators": "^7.10.4",
    "@babel/preset-env": "^7.12.0",
    "@babel/preset-react": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1",
    "rollup": "^2.30.0",
    "rollup-plugin-copy": "^3.3.0"
  },
  "build": {
    "directories": {
      "app": "dist",
      "output": "releases"
    },
    "win": {
      "target": "nsis",
      "icon": "app/imgs/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "LunaQMapEditor-Setup-win10-x64.${ext}"
    }
  }
}
